@page "/"
@rendermode InteractiveServer
@using PluScript
@using PluScript.Services
@using System.ComponentModel.DataAnnotations
@inject NavigationManager Navigation
@inject UserCredentialsService UserCredentialsService
<PageTitle>Login - PluScript</PageTitle>

<div class="row justify-content-center">
    <div class="col-md-6 col-lg-4">
        <div class="card">
            <div class="card-body">
                <h3 class="card-title text-center mb-4">Podaj dane logowania do EasyPLU</h3>
                
                @if (!string.IsNullOrEmpty(errorMessage))
                {
                    <div class="alert alert-danger" role="alert">
                        @errorMessage
                    </div>
                }

                @if (showSuccessMessage)
                {
                    <div class="alert alert-success alert-dismissible fade show" role="alert">
                        <i class="fas fa-check-circle me-2"></i>
                        Dane logowania zostały pomyślnie zapisane!
                        <button type="button" class="btn-close" @onclick="HideSuccessMessage" aria-label="Close"></button>
                    </div>
                }
                
                <EditForm Model="@loginModel" OnValidSubmit="@LoginAsync">
                    <DataAnnotationsValidator />
                    <ValidationSummary class="text-danger" />
                    
                    <div class="mb-3">
                        <label for="username" class="form-label">Login lub Email</label>
                        <InputText id="username" class="form-control" @bind-Value="loginModel.Username" placeholder="Podaj login lub email" />
                        <ValidationMessage For="@(() => loginModel.Username)" />
                    </div>
                    
                    <div class="mb-3">
                        <label for="password" class="form-label">Hasło</label>
                        <InputText id="password" type="password" class="form-control" @bind-Value="loginModel.Password" placeholder="Podaj hasło" />
                        <ValidationMessage For="@(() => loginModel.Password)" />
                    </div>
                    
                    <button type="submit" class="btn btn-primary w-100" disabled="@isLogging">
                        @if (isLogging)
                        {
                            <span class="spinner-border spinner-border-sm" role="status" aria-hidden="true"></span>
                            <span>Logowanie...</span>
                        }
                        else
                        {
                            <span>Zapisz dane</span>
                        }
                    </button>
                </EditForm>
            </div>
        </div>
    </div>
</div>

<!-- Success Modal -->
@if (showModal)
{
    <div class="modal fade show d-block" tabindex="-1" style="background-color: rgba(0,0,0,0.5);">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header bg-success text-white">
                    <h5 class="modal-title">
                        <i class="fas fa-check-circle me-2"></i>
                        Sukces!
                    </h5>
                </div>
                <div class="modal-body text-center">
                    <div class="mb-3">
                        <i class="fas fa-check-circle text-success" style="font-size: 3rem;"></i>
                    </div>
                    <h6>Dane logowania zostały pomyślnie zapisane!</h6>
                    <p class="text-muted mb-0">
                        Użytkownik: <strong>@savedUsername</strong>
                    </p>
                </div>
                <div class="modal-footer justify-content-center">
                    <button type="button" class="btn btn-success" @onclick="CloseModal">
                        <i class="fas fa-thumbs-up me-2"></i>
                        OK
                    </button>
                </div>
            </div>
        </div>
    </div>
}

@code {
    private LoginModel loginModel = new();
    private string errorMessage = "";
    private bool isLogging = false;
    private bool showSuccessMessage = false;
    private bool showModal = false;
    private string savedUsername = "";

    private async Task LoginAsync()
    {
        try
        {
            isLogging = true;
            errorMessage = "";
            showSuccessMessage = false;
            StateHasChanged();

            var result = await PluScript.Script.Login.LoginAsync(loginModel.Username, loginModel.Password);
            
            if (!string.IsNullOrEmpty(result.Token))
            {
                await UserCredentialsService.StoreCredentialsAsync(result.Username, loginModel.Password);
                
                // Show success confirmation
                savedUsername = result.Username;
                showModal = true;
                showSuccessMessage = true;
                
                // Clear the form
                loginModel = new LoginModel();
                
                StateHasChanged();
                
                // Auto-hide success message after 5 seconds
                _ = Task.Delay(5000).ContinueWith(_ => 
                {
                    showSuccessMessage = false;
                    InvokeAsync(StateHasChanged);
                });
            }
            else
            {
                errorMessage = "Nieprawidłowe dane logowania.";
            }
        }
        catch (Exception ex)
        {
            errorMessage = "Wystąpił błąd podczas logowania. Spróbuj ponownie.";
            Console.WriteLine($"Login error: {ex.Message}");
        }
        finally
        {
            isLogging = false;
            StateHasChanged();
        }
    }

    private void CloseModal()
    {
        showModal = false;
        StateHasChanged();
    }

    private void HideSuccessMessage()
    {
        showSuccessMessage = false;
        StateHasChanged();
    }

    public class LoginModel
    {
        [Required(ErrorMessage = "Login lub email jest wymagany.")]
        public string Username { get; set; } = "";

        [Required(ErrorMessage = "Hasło jest wymagane.")]
        public string Password { get; set; } = "";
    }
}
